# ============================================
# PRODUCTION ENVIRONMENT TEMPLATE
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin
# ============================================

# ============================================
# ORTAM AYARI
# ============================================
ENVIRONMENT="production"

# ============================================
# MikroTik bağlantı ayarları
# ============================================
MIKROTIK_HOST="your-mikrotik-ip"
MIKROTIK_PORT=8728
MIKROTIK_USER="admin"
MIKROTIK_PASSWORD="your-strong-password-here"
MIKROTIK_USE_TLS=True

# ============================================
# Veritabanı
# ============================================
# SQLite için (varsayılan)
DATABASE_URL="sqlite:///./router_manager.db"

# PostgreSQL için (production önerilir):
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/router_manager"

# ============================================
# JWT GÜVENLİK AYARLARI
# ÖNEMLİ: Güçlü bir SECRET_KEY oluşturun!
# Oluşturmak için: python3 -c "import secrets; print(secrets.token_hex(32))"
# ============================================
SECRET_KEY="CHANGE-THIS-TO-STRONG-SECRET-KEY-32-CHARS-MINIMUM"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Rate Limiting (DDoS Koruması)
# ============================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_LOGIN=3

# ============================================
# Güvenlik Ayarları
# ============================================
ENABLE_HTTPS_REDIRECT=True
TRUSTED_HOSTS="yourdomain.com,www.yourdomain.com"
MAX_REQUEST_SIZE=5242880

# ============================================
# Log ayarları
# ============================================
LOG_LEVEL="WARNING"
LOG_FILE="logs/app.log"

# ============================================
# CORS ayarları
# ÖNEMLİ: Sadece gerçek domain'lerinizi ekleyin!
# ============================================
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
