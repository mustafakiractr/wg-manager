# ============================================
# ORTAM AYARI (development / production)
# ============================================
ENVIRONMENT="development"

# ============================================
# MikroTik bağlantı ayarları
# ============================================
MIKROTIK_HOST="192.168.1.1"
MIKROTIK_PORT=8728
MIKROTIK_USER="admin"
MIKROTIK_PASSWORD="your_mikrotik_password_here"
MIKROTIK_USE_TLS=False

# ============================================
# Veritabanı
# ============================================
# PostgreSQL (production - varsayılan)
DATABASE_URL="postgresql+asyncpg://wg_user:wg_secure_pass_2025@localhost/wg_manager"

# SQLite (geliştirme için)
# DATABASE_URL="sqlite:///./router_manager.db"

# ============================================
# JWT GÜVENLİK AYARLARI
# ÖNEMLİ: SECRET_KEY'i production'da değiştirin!
# Yeni key oluşturmak için: python3 -c "import secrets; print(secrets.token_hex(32))"
# ============================================
SECRET_KEY="CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_IN_PRODUCTION"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Rate Limiting (DDoS Koruması)
# Development için yüksek, production için düşük tutun
# ============================================
RATE_LIMIT_PER_MINUTE=200
RATE_LIMIT_LOGIN=5

# ============================================
# Güvenlik Ayarları
# ============================================
ENABLE_HTTPS_REDIRECT=False
TRUSTED_HOSTS="*"
MAX_REQUEST_SIZE=10485760  # 10 MB

# ============================================
# Log ayarları
# ============================================
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# ============================================
# CORS ayarları (virgül ile ayrılmış liste)
# ÖNEMLİ: Production'da sadece gerçek domain'lere izin verin!
# ============================================
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# Production için örnek:
# CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
